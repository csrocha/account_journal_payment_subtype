<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_partner_state_form" model="ir.ui.view">
            <field name="name">partner_state_partner_form_view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <form>
                    <field name="company_partner_state" invisible="1"/>
                </form>
                <sheet position="before">
                    <header attrs="{'invisible':[('company_partner_state','=',False)]}">
                        <button name="partner_state_pending" states="potential"
                            string="Request Approval" type="object" class="oe_highlight"/>
                        <button name="partner_state_approved" states="pending"
                            string="Approve" type="object" class="oe_highlight"/>
                        <button name="partner_state_potential" states="approved,pending"
                            string="To Potential" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                </sheet>
            </field>
        </record>
        
<!-- Lo sacamos de la vista tree porque depende de la compania -->
