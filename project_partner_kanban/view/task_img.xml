<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_task_kanban_name">
            <field name="name">project.task.name</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">

                <field name="user_id" position="before">
                    <field name="partner_id"/>
                </field>
                <div class="oe_kanban_bottom_right" position="inside">
                    <img t-att-src="kanban_image('res.partner', 'image_small', record.partner_id.raw_value)" t-att-title="record.partner_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>
                </div>
            </field>

        </record>

        <record model="ir.ui.view" id="view_proyect_kanban_img">
            <field name="name">project.task.img</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">

                <field name="user_id" position="before">
                    <field name="partner_id"/>
                </field>
                
                <div class="oe_kanban_project_avatars" position="inside">
                            <img t-att-src="kanban_image('res.partner', 'image_small', record.partner_id.raw_value)" t-att-title="record.partner_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>
                </div>
            </field>
        </record>

    </data>
</openerp>